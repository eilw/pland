= f.label :_grado
= f.grouped_collection_select(:steel_grade_id, SteelType.all, :steel_grade_options, :steel_type, :id, :grade, {include_blank: 'Please select option'}, required: true, class: 'steel-selection')
= f.label :diametro
= f.grouped_collection_select(:steel_width_id, SteelType.all, :steel_width_options, :steel_type, :id, :width,{include_blank: 'Please select option'}, required: true, class: 'steel-selection')
= f.label :acabado
= f.collection_select(:steel_finish_id, SteelFinish.all, :id, :finish,{include_blank: 'Please selection option'}, required: true, class: 'steel-selection') 

